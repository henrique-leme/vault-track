{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "lib": ["ES2021"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {}
  },
  "include": [],
  "exclude": ["node_modules", "dist"]
}
